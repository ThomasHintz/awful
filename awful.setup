;;; awful.setup -*- scheme -*-

;; Compile the extension
(compile -s -O2 -d1 -j awful awful.scm)
(compile -s -O2 -d1 awful.import.scm)

;; Compile the application (server)
(compile -O2 -d1 awful-server.scm -o awful)

(install-extension 'awful
                   '("awful.so" "awful.import.so")
                   '((version "0.14")))

(install-program 'awful
                 '("awful")
                 `((version "0.14")))
